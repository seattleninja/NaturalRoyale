<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seattleninja.naturalroyale"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="com.seattleninja.naturalroyale.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.seattleninja.naturalroyale.About" android:label="@string/about"></activity>
        <activity android:name="com.seattleninja.naturalroyale.Email" android:label="@string/email">></activity>
        <activity android:name="com.seattleninja.naturalroyale.Facebook" android:label="@string/facebook">></activity>
        <activity android:name="com.seattleninja.naturalroyale.TheGrid" android:label="@string/flavors">></activity>
        <activity android:name="com.seattleninja.naturalroyale.Website" android:label="@string/website">></activity>
        <activity android:name="com.seattleninja.naturalroyale.SingleItem" android:label="@string/app_name">></activity>
        </application>

</manifest>